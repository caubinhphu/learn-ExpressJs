extends ../template-layout/common.user.pug

block content
	.container
		h1.my-4.text-center Your cart
		
		if user
			.row.text-center.text-sm-left
				.col-sm-5.d-flex.flex-column.align-items-center
					img.rounded-circle.mb-4(src=user.avatar, width="200", height="200")
					a.btn.btn-info(href='/user/edit/' + user.id) Edit your profile
				.col-sm-7.d-flex.flex-column.justify-content-center
					p= `Name: ${user.name}`
					p= `Age: ${user.age}`
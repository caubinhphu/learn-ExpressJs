extends ../template-layout/common

block content
	.container.my-4
		h2.text-center Users list
		
		.d-flex.justify-content-between.my-4
			a.btn.btn-primary.align-self-center(href="/users/create") Add

			form.m-0(action="/users/search", method="GET")
				.input-group
					input.form-control(type="text" name="q" value=`${query}` === 'undefined' ? '': `${query}`)
					.input-group-append
						button.btn.btn-success Search
		
		table.table
			tr
				th Name
				th Age
				th View
			each user in users
				tr
					td= user.name
					td= user.age + ' '
					td
						a.btn.btn-light(href='/users/' + user.id) View

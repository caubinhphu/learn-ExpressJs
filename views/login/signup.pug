extends ../template-layout/common.user.pug

block content
	.mt-4.text-center
		h1 Sign up new account
	
	.container
		if errs
			each err in errs
				.alert.alert-danger= err

		form(action="signup", method="POST", enctype="multipart/form-data")
			.form-group.row
				label.col-sm-2(for="email") Email
				input#email.form-control.col-sm-10(type="email" name="email", value=values ? values.email : "")
			.form-group.row
				label.col-sm-2(for="password") Password
				input#password.form-control.col-sm-10(type="password" name="password")
			.form-group.row
				label.col-sm-2(for="re-password") Re-Password
				input#re-password.form-control.col-sm-10(type="password" name="repassword")
			.form-group.row
				label.col-sm-2(for="name") Name
				input#name.form-control.col-sm-10(type="text" name="name", value=values ? values.name : "")
			.form-group.row
				label.col-sm-2(for="age") Age
				input#age.form-control.col-sm-10(type="text" name="age", value=values ? values.age : "")
			.form-group.row
				label.col-sm-2(for="avatar") Avatar
				input#avatar.form-control-file.col-sm-10(type="file" name="avatar")
			div.text-right
				button.btn.btn-primary(type="submit") Add
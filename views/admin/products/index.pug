extends ../../template-layout/common

block content
	.container.my-4
		h1.text-center Products
		a.btn.btn-primary(href="/admin/products/create") Add new product
		.mt-4.row
			each product in products
				.col-md-4.mt-2
					.card
						img.card-img-top(src=product.images[0], alt='product')
						.card-body
							h5.card-title= product.name
							p.card-text= product.description
							a.btn.btn-primary(href='/admin/products/' + product.id) View